{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "declaration": true,
        "noImplicitAny": false,
        "sourceMap": false,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["es2017"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "jasmine"
        ]
    },
    "exclude": [ "node_modules", "dist" ]
}